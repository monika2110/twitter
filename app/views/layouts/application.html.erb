<!DOCTYPE html>
<html>
  <head>
    <title>Twitter</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>


<section class="content">
  <nav id="side_nav" class="side_nav">
    <p>
    <%= link_to "Home" ,root_path %> &ensp;


    <% if user_signed_in? %>

        <%= link_to current_user.name, user_path(current_user)%> &ensp;

        <%= link_to "Logout", destroy_user_session_path, method: :delete%> &ensp;
    <% else %>

        <%= link_to 'Sign In', new_user_session_path%> &ensp;

        <%= link_to 'Sign Up', new_user_registration_path%>
      </p>
    <% end %>



  </nav>
  <main class='<%= controller.controller_name %>'>
    <%= yield %>
  </main>
</section>
</body>
</html>

