                      <%= form.hidden_field :source_type, value: 'Tweet' %>
                      <%= form.hidden_field :source_id, value: tweet.source.id %>

                      <%= button_tag class: "dropdown-item" do%>
                        <i class="bi bi-arrow-repeat"></i>&ensp;Retweet
