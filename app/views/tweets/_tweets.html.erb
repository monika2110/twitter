                  <%=button_to new_tweet_path, params: {source_id: tweet.source.id, source_type: 'Tweet'}, method: :get, class: "dropdown-item", type: "button"  do%>
                    <i class="bi bi-pencil"></i> &ensp;Quote Tweet
                  <% end %>
