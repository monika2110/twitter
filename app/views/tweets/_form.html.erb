

<div style="padding-bottom: 40px">
  <%= form_with(model: Tweet) do |form| %>
    <% if tweet.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(tweet.errors.count, "error") %> prohibited this tweet from being saved:</h2>

        <ul>
          <% tweet.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div id="avatar"></div>
    <%= user_avatar(current_user,'50px' ) %>
      <div class="field" style="  margin-left: 50px; margin-right: 30px;">
        <%= form.text_area :content, placeholder: "What's happening?", class: "form-control tweet-field"%>
      </div>

    <div class="image-upload">
      <%= form.label :image, raw("<i class='bi bi-image'></i>") %>
      <%= form.file_field :image, style: 'display:none;' %>
    </div>



    <div class="actions" style="padding: 15px" >
      <%= form.submit "Tweet", class:"btn btn-secondary" %>
    </div>





<% end %>
</div>


