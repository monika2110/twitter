 <% @messages.each do |message| %>
    <% if message.content %>
      <% user = User.all.find(message.user_id) %>
      <% if message.user_id == current_user.id %>
      <div class="my-msg">
        <div class="my-msg-box" >
          <%= message.content %>
        </div>
      </div>
      <% else %>
          <div class="other-msg-box" >
            <%= message.content %>
          </div>
      <% end %>
    <% end %>
 <% end %>
<%= render partial: 'form' ,locals: { message: @message} %>